<h1><%= I18n.t('organizations.index.title') %></h1>

<table border="0" cellspacing="20" style="margin-left:200px;">

  <tr>
    <th><%= I18n.t('organizations.information.name') %></th>
    <th><%= I18n.t('organizations.information.leader') %></th>
    <th><%= I18n.t('organizations.information.email') %></th>
    <th><%= I18n.t('organizations.information.phone_number') %></th>
    <th><%= I18n.t('organizations.information.description') %></th>
  </tr>

<% @organizations.each do |organization| %>
  <tr>
    <td><%=h organization.name %></td>
    <td><%=h organization.leader %></td>
    <td><%=h organization.email %></td>
    <td><%=h organization.phone_number %></td>
    <td><%=h organization.description %></td>
    <td><%= link_to I18n.t('organizations.controls.show'), organization %></td>
    <td><%= link_to I18n.t('organizations.controls.edit'), edit_organization_path(organization) %></td>
    <td><%= link_to I18n.t('organizations.controls.destroy'), organization, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to I18n.t('organizations.new.create'), new_organization_path %>