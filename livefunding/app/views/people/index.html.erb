<h1><%= I18n.t('people.index.title') %></h1>

<table>
  <tr>
    <th><%= I18n.t('people.index.last_name') %></th>
	<th><%= I18n.t('people.index.first_name') %></th>
    <th><%= I18n.t('people.index.sex') %></th>
    <th><%= I18n.t('people.index.phone_number') %></th>
    <th><%= I18n.t('people.index.birthday') %></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%=h person.last_name %></td>
	<td><%=h person.first_name %></td>
    <td><%=h person.sex %></td>
    <td><%=h person.phone_number %></td>
    <td><%=h person.brithday %></td>
    <td><%= link_to I18n.t('layout.navigation.show'), person %></td>
    <td><%= link_to I18n.t('layout.navigation.edit'), edit_person_path(person) %></td>
    <td><%= link_to I18n.t('layout.navigation.destroy'), person, :confirm => I18n.t('layout.navigation.sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New person', new_person_path %>