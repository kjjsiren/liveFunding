<h1>Add a known association</h1>
	
	<% form_for([@entity, @association]) do |f| %>
		<%= f.error_messages %>
		
		<p>
			<%= f.label :thirdpartyperson_id, 'Association in question' %>
			<%= f.text_field :thirdpartyperson_id %>
				<%= f.label :description, 'Description of relationship' %><%= f.text_field :description %> &nbsp;&nbsp;<%= f.label :infosource ,'Source of information' %>
			<%= f.text_field :infosource %>
			
		</p>
			
		<p>
			<%= f.submit %>
		</p> 

	<% end %>
	<%= link_to 'Back', entity_path(@entity) %>