<h1>Comment this transaction</h1>

	<h2><%=h current_user.username %></h2>
	
	<% form_for([@transaction, @comment]) do |f| %>
		<%= f.error_messages %>
		
		<p>
			<%= f.label "Your name:" %><br />
			<%= f.text_field :commenter %>
		</p>	

		<p>
			<%= f.label "Your comment:" %><br />
			<%= f.text_area :content %>
		</p>
			
		<p>
			<%= f.submit "Submit" %>
		</p> 

	<% end %>
	<%= link_to 'Back', transaction_path(@transaction) %>