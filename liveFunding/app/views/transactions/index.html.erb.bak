<%= link_to I18n.t('transactions.new.title'), new_transaction_path %> &nbsp;&nbsp;
<%= link_to I18n.t('transactions.top.title'), top_transactions_path %> &nbsp;&nbsp;
<%= link_to I18n.t('transactions.fundtop.title'), fundtop_transactions_path %> &nbsp;&nbsp;
<%= link_to I18n.t('transactions.exportcsv.title'), { :controller => :transactions, :action => "export_csv" } %> 


<% form_for :transaction, @transaction, :url=>{:controller=>"transactions", :action=>"import_csv"} do |f| %> 
<%= I18n.t('transactions.importcsv.title') %>  : <%= f.file_field :file %> <%= submit_tag 'Submit' %> <% end %> <br />

<h3><%= I18n.t('transactions.index.title') %></h3>
<table borders="0" cellspacing="15">
<% @transactions.each do |transaction| %>
<tr>
	<td><%= I18n.t('transactions.index.id') %>: <%=h transaction.id %></td>
	<td> <%=h I18n.t('transactions.index.from') %>: <strong><%=h transaction.donor %></strong></td>
	<td><strong><%=h transaction.amount %></strong>€ </td><td>--></td><td><strong><%=h transaction.recipient %></strong></td>
	<td><%=h transaction.created_at.strftime("%d.%m.%Y %H:%M")  %></td>
	<td><%= link_to '+', { :controller => :transactions, :action => "incr_rank", :id => transaction.id }, :title => "Rank It!" %> <%=h transaction.rank %></td>
	<td><%= link_to '♥', { :controller => :transactions, :action => "incr_ilike", :id => transaction.id }, :title => "I Like It!"  %> <%=h transaction.ilike %></td>
	<td><%= link_to I18n.t('layout.navigation.show'), transaction %> </td>
	<td><%= link_to I18n.t('layout.navigation.edit'),  edit_transaction_path(transaction) %></td>
	<td><%= link_to I18n.t('layout.navigation.destroy'), transaction, :confirm => I18n.t('layout.navigation.sure'), :method => :delete %></td>
</tr>
<% end %>
</table>
<br />

