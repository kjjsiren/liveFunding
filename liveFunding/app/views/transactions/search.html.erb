<h2 style="margin-left:20px;"><%= I18n.t('transactions.search.title') %> <%=params[:transaction][:from]%></h2>
<div style="width:50%;float:left;">
	<h3 style="margin-left:50px;">From <%=params[:transaction][:from]%>: <%= @transactions_from.size%> records</h3>
<table border="0" cellspacing="10">
  <tr>
    <th><%= I18n.t('transactions.search.id') %></th>
    <th><%= I18n.t('transactions.search.amount') %></th>
    <th><%= I18n.t('transactions.search.from') %></th>
    <th><%= I18n.t('transactions.search.to') %></th>
	<th><%= I18n.t('transactions.search.create_time') %></th>
	<th><%= I18n.t('transactions.search.rank') %></th>
    <th><%= I18n.t('transactions.search.operation') %></th>
  </tr>
<% @transactions_from.each do |transaction| %>
  <tr>
    <td><%=h transaction.id %></td>
    <td><%=h transaction.amount %></td>
    <td style="font-weight:bold;"><%=h transaction.from %></td>
    <td style="font-weight:bold;"><%=h transaction.to %></td>
	<td><%=h transaction.created_at.strftime("%d.%m.%Y %H:%M") %></td>
	<td><%=h transaction.rank %></td>
	<td><%= link_to 'Show', transaction %> <br />
	<%= link_to 'Edit',  edit_transaction_path(transaction) %> <br />
	<%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
<div style="width:45%;float:right; clear:none;">
	<h3 style="margin-left:50px;">To <%=params[:transaction][:from]%>: <%= @transactions_to.size%> records</h3>
<table border="0" cellspacing="10" style="margin-left:20px;">
  <tr>
    <th><%= I18n.t('transactions.search.id') %></th>
    <th><%= I18n.t('transactions.search.amount') %></th>
    <th><%= I18n.t('transactions.search.from') %></th>
    <th><%= I18n.t('transactions.search.to') %></th>
	<th><%= I18n.t('transactions.search.create_time') %></th>
	<th><%= I18n.t('transactions.search.rank') %></th>
    <th><%= I18n.t('transactions.search.operation') %></th>
  </tr>

<% @transactions_to.each do |transaction| %>
  <tr>
    <td><%=h transaction.id %></td>
    <td><%=h transaction.amount %></td>
    <td style="font-weight:bold;"><%=h transaction.from %></td>
    <td style="font-weight:bold;"><%=h transaction.to %></td>
	<td><%=h transaction.created_at.strftime("%d.%m.%Y %H:%M") %></td>
	<td><%=h transaction.rank %></td>
	<td><%= link_to 'Show', transaction %> <br />
	<%= link_to 'Edit',  edit_transaction_path(transaction) %> <br />
	<%= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
