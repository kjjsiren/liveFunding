<h1><%= I18n.t('transactions.show.title') %></h1>

<% form_for(@transaction) do |f| %>
<%= f.error_messages %>

<p>
	<%= f.label :amount, I18n.t('transactions.information.amount') %><br />
	<%=h @transaction.amount %>
</p>

<p>
	<%= f.label :donor, I18n.t('transactions.information.from') %><br />
	<%if @transaction.donor !=nil %><%=h @transaction.donor.name %><%end%>
</p>

<p>
	<%= f.label :recipient, I18n.t('transactions.information.to') %><br />
    	<%if @transaction.recipient !=nil %><%=h @transaction.recipient.name %><%end%>
</p>

<p>
	<%= f.label :description, I18n.t('transactions.information.description') %><br />
	<%=h @transaction.description %>
</p>
	
<p>
	<%= f.label :rank, I18n.t('transactions.information.rank') %><br />
   	<%=h @transaction.rank %>
</p>

<div id="comment-list">
	<h2><%= I18n.t('transactions.show.comments_title') %>:</h2>
	
	<% @transaction.comments.each do |comment| %>
  	<div class "<%= cycle('list-line-odd', 'list-line-even')%>">
		<p>
			<b><%=h comment.commenter %> <%= I18n.t('transactions.show.commenter_said') %></b>
		</p>
	  
		<p>  
			<%=h comment.content %>
		</p>
		<%= link_to I18n.t('layout.navigation.edit'), edit_transaction_comment_path(@transaction, comment.id) %>  
		<%= link_to I18n.t('layout.navigation.destroy'), transaction_comment_path(@transaction, comment), :confirm => 'Are you sure?', :method => :delete %> 
	</div>
	<% end %>
</div>	
<br />
	
<%= link_to I18n.t('transactions.show.new'), new_transaction_comment_path(@transaction)  %>
<%= link_to I18n.t('layout.navigation.back'), transactions_path %>
<% end %>